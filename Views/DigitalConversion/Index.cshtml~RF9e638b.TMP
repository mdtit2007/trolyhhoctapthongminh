@model PagedList.PagedList<ungdunghocthongminh.Models.EF.DigitalConversion>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Chuyển Đổi Số";
}

<style>
    .news_section_container {
        margin-top: 30px;
    }

    .title-news {
        font-size: 35px;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .Img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .row_item_news {
        margin-bottom: 20px;
    }

    .content-box a {
        color: #ffffff;
    }

    /* Style for the image container */
    .blog_item {
        position: relative;
        overflow: hidden; /* Prevent image from overflowing the container */
    }

    /* The image itself */
    .blog_background img {
        width: 100%;
        height: auto;
        transition: transform 0.3s ease; /* Smooth zoom effect */
    }

    /* Zoom effect on hover */
    .blog_background:hover img {
        transform: scale(1.1); /* Zoom in the image */
    }

    /* Style for the text content over the image */
    .blog_content {
        position: absolute; /* Position content over the image */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Center the content */
        opacity: 0;
        visibility: hidden;
        text-align: center;
        color: white; /* White text color */
        background-color: #ffffff; /* Dark background for better contrast */
        padding: 10px;
        width: 80%; /* Adjust width to your needs */
        transition: opacity 0.3s ease, visibility 0.3s ease; /* Smooth fade-in effect */
        border-radius: 8px; /* Rounded corners */
    }

    /* When hovering over the image, show the blog content */
    .blog_background:hover + .blog_content {
        opacity: 1;
        visibility: visible; /* Make the content visible */
    }

    /* Style the blog title and meta for better readability */
    .blog_title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .blog_meta {
        font-size: 14px;
        color: #ddd; /* Light gray for the meta */
    }

    .pagination-container {
        display: flex;
        justify-content: center; /* Căn giữa theo chiều ngang */
        margin-top: 20px;
    }

    .pagination {
        display: inline-flex; /* Đặt các phần tử liên kết ngang hàng */
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .pagination a,
        .pagination span {
            margin: 0 5px;
            padding: 8px 12px;
            border: 1px solid #ddd;
            text-decoration: none;
            color: #333;
            border-radius: 4px; /* Bo tròn góc cho đẹp */
            cursor: pointer;
        }

        .pagination .active span {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
</style>

<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news text-center">Chuyển Đổi Số</h1>
            <hr />
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row_item_news">
                <div class="col-md-4">
                    <div class="blog_item">
                        <div class="blog_background">
                            <img src="@item.Image" width="300" height="300" />
                        </div>
                        <!-- Hidden content that appears on hover -->
                        <div class="blog_content">
                            <h4 class="blog_title">@item.Title</h4>
                            <span class="blog_meta">@item.CreatedDate|@item.CreatedDate.ToString("dd/MM/yyyy")</span>
                            <a class="blog_more" href="/@item.Alias-n@(item.Id)">Đọc Thêm</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="content-box">
                        <h3><a href="/@item.Alias-n@(item.Id)" title="@item.Title">@item.Title</a></h3>
                        <div class="description box">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="pagination-container">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    }
</div>
