<script>
    $(document).ready(function () {
    // Handle "Lịch học trong tuần" click
    $("#view-schedule").click(function () {
        // Send AJAX request to load "Lịch học"
        $.ajax({
            url: '@Url.Action("PartialSchedule", "Schedule")',  // Adjust the action and controller accordingly
            type: 'GET',
            data: {
                filterType: 'schedule',  // Filter for class schedules
                weekOffset: 0  // You can adjust weekOffset as needed
            },
            success: function (result) {
                // Show the content for Lịch học
                $("#schedule-container").html(result);
            },
            error: function () {
                alert("Có lỗi xảy ra khi tải Lịch học.");
            }
        });
    });

    // Handle "Lịch thi trong tuần" click
    $("#view-exam").click(function () {
        // Send AJAX request to load "Lịch thi"
        $.ajax({
            url: '@Url.Action("PartialSchedule", "Schedule")',  // Adjust the action and controller accordingly
            type: 'GET',
            data: {
                filterType: 'exam',  // Filter for exam schedules
                weekOffset: 0  // You can adjust weekOffset as needed
            },
            success: function (result) {
                // Show the content for Lịch thi
                $("#schedule-container").html(result);
            },
            error: function () {
                alert("Có lỗi xảy ra khi tải Lịch thi.");
            }
        });
    });
});

</script>