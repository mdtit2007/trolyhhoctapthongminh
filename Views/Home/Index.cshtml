<!-- Notification Boxes -->
<div class="row g-2 mb-3">
    <div class="col-12">
        <div class="info-box">
            <div class="notification-badge"></div>
            <h6>Nhắc nhớ mới, chưa xem</h6>
            @if (User.Identity.IsAuthenticated)
            {
                <!-- Nếu đã đăng nhập, hiển thị link đến trang nhắc nhở -->
                <a href="~/Schedule/nhacnho" class="text-primary small">Xem chi tiết</a>
            }
            else
            {
                <!-- Nếu chưa đăng nhập, hiển thị thông báo và chuyển hướng bằng JavaScript -->
                <a href="javascript:void(0);" class="text-primary small" onclick="confirmLogin()">Xem chi tiết</a>
            }
        </div>
    </div>

    <script>
    function confirmLogin() {
        // Hiển thị hộp thoại xác nhận
        const result = confirm("Bạn cần đăng nhập để xem nhắc nhở. Bạn có muốn đăng nhập ngay bây giờ?");
        if (result) {
            // Nếu người dùng chọn "OK", chuyển hướng đến trang đăng nhập
            window.location.href = '@Url.Action("Login", "Account")';
        }
        // Nếu người dùng chọn "Cancel", không làm gì cả
    }
    </script>


    <script>
    function showLoginAlert() {
        // Hiển thị thông báo và chuyển hướng đến trang đăng nhập
        alert("Bạn cần đăng nhập để xem nhắc nhở.");
        window.location.href = '@Url.Action("Login", "Account")';
    }
    </script>

    <div class="col-6">
        <div class="info-box light-blue-bg">
            <div class="notification-badge"></div>
            <h6>Lịch học trong tuần</h6>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/lich-hoc" class="text-primary small">Xem chi tiết</a>
            }
            else
            {
                <a href="javascript:void(0);" class="text-primary small" onclick="showLoginPrompt()">Xem chi tiết</a>
            }
        </div>
    </div>
    <div class="col-6">
        <div class="info-box light-orange-bg">
            <div class="notification-badge"></div>
            <h6>Lịch thi trong tuần</h6>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/lich-hoc" class="text-primary small">Xem chi tiết</a>
            }
            else
            {
                <a href="javascript:void(0);" class="text-primary small" onclick="showLoginPrompt()">Xem chi tiết</a>
            }
        </div>
    </div>

    <script type="text/javascript">
        function showLoginPrompt() {
            if (confirm("Bạn chưa đăng nhập. Bạn muốn đăng nhập ngay bây giờ để xem lịch học và lịch thi của mình?")) {
                window.location.href = '/Account/Login'; // Chuyển hướng tới trang đăng nhập
            }
        }
    </script>

