</html>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const todayButton = document.querySelector('.buttons button:nth-child(1)');
        const backButton = document.querySelector('.buttons button:nth-child(2)');
        const nextButton = document.querySelector('.buttons button:nth-child(3)');

        const tableHeaders = document.querySelectorAll('thead th');
        let currentDate = new Date();

        // Hàm để cập nhật tiêu đề ngày trong tuần
        function updateTableHeaders() {
            const daysOfWeek = ['Chủ nhật', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7'];
            const startDate = new Date(currentDate);
            startDate.setDate(startDate.getDate() - startDate.getDay()); // Lấy Chủ nhật của tuần hiện tại

            for (let i = 0; i < 7; i++) {
                const day = new Date(startDate);
                day.setDate(startDate.getDate() + i);
                tableHeaders[i + 1].innerHTML = `${daysOfWeek[i]}<br>${day.toLocaleDateString('vi-VN')}`;
            }
        }

        // Chức năng nút "Hiện tại"
        todayButton.addEventListener('click', function () {
            currentDate = new Date();
            updateTableHeaders();
        });

        // Chức năng nút "Trở về"
        backButton.addEventListener('click', function () {
            currentDate.setDate(currentDate.getDate() - 7); // Quay lại tuần trước
            updateTableHeaders();
        });

        // Chức năng nút "Tiếp"
        nextButton.addEventListener('click', function () {
            currentDate.setDate(currentDate.getDate() + 7); // Tiến tới tuần sau
            updateTableHeaders();
        });

        // Cập nhật ngày đầu tiên khi tải trang
        updateTableHeaders();
    });

</script>
