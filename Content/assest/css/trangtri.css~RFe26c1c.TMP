/* Fish tank container */
.fish-tank {
    position: relative;
    height: 200px;
    background: #87CEFA; /* Màu nền giống nước biển */
    border-radius: 10px;
    overflow: hidden;
}

/* Bubble animation */
.bubble {
    position: absolute;
    bottom: 0;
    width: 30px;
    height: 30px;
    background-color: #fff;
    border-radius: 50%;
    animation: bubble 5s infinite;
}

    .bubble:nth-child(1) {
        left: 20%;
        animation-duration: 4s;
    }

    .bubble:nth-child(2) {
        left: 50%;
        animation-duration: 6s;
    }

    .bubble:nth-child(3) {
        left: 80%;
        animation-duration: 5s;
    }

/* Keyframe for bubble animation */
@keyframes bubble {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(-200px);
    }
}

/* Flying bubble animation */
.flying-bubble {
    position: absolute;
    bottom: 0;
    width: 20px;
    height: 20px;
    background-color: #FFD700; /* Màu vàng cho bong bóng bay */
    border-radius: 50%;
    animation: flying 4s infinite;
}

    .flying-bubble:nth-child(1) {
        left: 25%;
        animation-duration: 3s;
    }

    .flying-bubble:nth-child(2) {
        left: 55%;
        animation-duration: 5s;
    }

    .flying-bubble:nth-child(3) {
        left: 80%;
        animation-duration: 4s;
    }

/* Keyframe for flying bubble animation */
@keyframes flying {
    0% {
        transform: translateY(0);
        opacity: 1;
    }

    100% {
        transform: translateY(-300px);
        opacity: 0;
    }
}

/* Responsive adjustments */
@media (max-width: 767px) {
    .col-12 {
        margin-bottom: 20px;
    }

    .fish-tank, .effects-container {
        height: 150px; /* Giảm chiều cao cho mobile */
    }

    .bubble, .flying-bubble {
        width: 20px; /* Giảm kích thước bong bóng */
        height: 20px;
    }

    .card-body {
        padding: 1rem; /* Điều chỉnh khoảng cách cho các thẻ card */
    }

    .display-4 {
        font-size: 1.5rem; /* Giảm kích thước tiêu đề */
    }
}
