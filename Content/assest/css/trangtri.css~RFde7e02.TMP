
.fish-tank {
    position: relative;
    height: 200px;
    background: #87CEFA;
    border-radius: 10px;
    overflow: hidden;
}

.bubble {
    position: absolute;
    bottom: 0;
    width: 30px;
    height: 30px;
    background-color: #fff;
    border-radius: 50%;
    animation: bubble 5s infinite;
}

    .bubble:nth-child(1) {
        left: 20%;
        animation-duration: 4s;
    }

    .bubble:nth-child(2) {
        left: 50%;
        animation-duration: 6s;
    }

    .bubble:nth-child(3) {
        left: 80%;
        animation-duration: 5s;
    }

@keyframes bubble {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(-200px);
    }
}

.flying-bubble {
    position: absolute;
    bottom: 0;
    width: 20px;
    height: 20px;
    background-color: #FFD700;
    border-radius: 50%;
    animation: flying 4s infinite;
}

    .flying-bubble:nth-child(1) {
        left: 25%;
        animation-duration: 3s;
    }

    .flying-bubble:nth-child(2) {
        left: 55%;
        animation-duration: 5s;
    }

    .flying-bubble:nth-child(3) {
        left: 80%;
        animation-duration: 4s;
    }

@keyframes flying {
    0% {
        transform: translateY(0);
        opacity: 1;
    }

    100% {
        transform: translateY(-300px);
        opacity: 0;
    }
}

@media (max-width: 767px) {
    .col-md-6 {
        margin-bottom: 15px;
    }

    .fish-tank, .effects-container {
        height: 150px;
    }

    .bubble, .flying-bubble {
        width: 20px;
        height: 20px;
    }
}


