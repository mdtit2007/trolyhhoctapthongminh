@model ungdunghocthongminh.Models.ApplicationUser
@{
    ViewBag.Title = "Cập nhật tài khoản";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/news" class="nav-link">Tài khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật tài khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Tài khoản</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật tài khoản</h3>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x=>x.Id)
                        <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tài khoản</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Tài khoản " })
                            @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Mã Học Sinh</label>
                            @Html.TextBoxFor(x => x.MHS, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Họ Và Tên</label>
                            @Html.TextAreaFor(x => x.FullName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Giới Tính</label>
                            @Html.TextBoxFor(x => x.GTinh, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Ngày Sinh</label>
                            @Html.TextBoxFor(x => x.NgaySinh, new { @class = "form-control", @type = "date" })
                        </div>
                        <div class="form-group">
                            <label>Lớp</label>
                            @Html.TextBoxFor(x => x.lop, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Khóa</label>
                            @Html.TextBoxFor(x => x.KH, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Nơi Sinh</label>
                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">SDT</label>
                            @Html.TextAreaFor(x => x.Phone, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            @Html.TextAreaFor(x => x.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a href="/admin/news" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>

                    }

                </div>
            }

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
