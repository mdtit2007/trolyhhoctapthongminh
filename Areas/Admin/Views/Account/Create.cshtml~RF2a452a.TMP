@model ungdunghocthongminh.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Thêm Mới Tài Khoản";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account" class="nav-link">Tài Khoản</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh Sách Tài Khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Danh Sách Tài Khoản</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới Tài Khoản</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Tài Khoản</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mã Học Sinh</label>
                    @Html.TextBoxFor(x => x.MHS, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Họ Và Tên</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Giới Tính</label>
                    @Html.TextBoxFor(x => x.GTinh, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Ngày Sinh</label>
                    @Html.TextBoxFor(x => x.NgaySinh, new { @class = "form-control",@type="date" })
                </div>
                <div class="form-group">
                    <label>Lớp</label>
                    @Html.TextBoxFor(x => x.lop, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Khóa</label>
                    @Html.TextBoxFor(x => x.KH, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Nơi Sinh</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>SDT</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Quyền</label>
                    @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "-Chọn quyền-", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mật Khẩu</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Nhập Lại Mật Khẩu</label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                </div>
                <div>
                    <button type="submit" class="btn btn-sm btn-success">Thêm Mới</button>

                </div>
            }

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
