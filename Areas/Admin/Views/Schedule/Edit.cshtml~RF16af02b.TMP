
@model ungdunghocthongminh.Models.EF.Schedule
@{
    ViewBag.Title = "Cập Nhật Lịch học";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Schedule" class="nav-link">Lịch học</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập Nhật </a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập Nhật  Lịch học</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Lịch học</a></li>
                    <li class="breadcrumb-item active">Cập Nhật </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin Cập Nhật  Lịch học</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Schedule", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        @*<div class="form-group">
                            <label for="exampleInputEmail1">THứ</label>
                            @Html.TextBoxFor(x => x.Thu, new { @class = "form-control", @placeholder = "Tên danh mục" })
                            @Html.ValidationMessageFor(x => x.Thu, null, new { @class = "text-danger" })
                        </div>*@
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên Lịch học</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tên danh mục" })
                            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Hình Thức</label>
                            @Html.DropDownListFor(x => x.ScheduleCategoryId, ViewBag.ScheduleCategory as SelectList, "-Chọn hình thức-", new { @class = "form-control", @placeholder = "hình thức" })
                            @Html.ValidationMessageFor(x => x.ScheduleCategoryId, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Alias</label>
                            @Html.TextBoxFor(x => x.Alias, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Alias, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mã lớp</label>
                            @Html.TextBoxFor(x => x.ClassId, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ClassId, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tiết</label>
                            @Html.TextBoxFor(x => x.Tiet, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Tiet, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Phòng</label>
                            @Html.TextBoxFor(x => x.className, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.className, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên Giáo Viên</label>
                            @Html.TextBoxFor(x => x.TeacherName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.TeacherName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Mô tả</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Thời gian bắt đầu</label>
                            @Html.TextBoxFor(x => x.Start, new { @class = "form-control", @type = "datetime-local" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Thời gian kết thúc</label>
                            @Html.TextBoxFor(x => x.End, new { @class = "form-control", @type = "datetime-local" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhắc nhở</label>
                            @Html.TextBoxFor(x => x.Reminder, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <a href="/admin/Schedule" class="btn btn-danger">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                }

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script src="~/Scripts/jsConvert.js"></script>
}



